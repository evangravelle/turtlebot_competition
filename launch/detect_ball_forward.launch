<launch>

  <!-- Detect Ball Parameters-->
  <arg name="h_min_forward_orange" default="0" />
  <arg name="h_max_forward_orange" default="27" />
  <arg name="s_min_forward_orange" default="52" />
  <arg name="s_max_forward_orange" default="255" />
  <arg name="v_min_forward_orange" default="111" />
  <arg name="v_max_forward_orange" default="255" />
  <arg name="h_min_forward_green" default="28" />
  <arg name="h_max_forward_green" default="44" />
  <arg name="s_min_forward_green" default="18" />
  <arg name="s_max_forward_green" default="160" />
  <arg name="v_min_forward_green" default="148" />
  <arg name="v_max_forward_green" default="255" />
  <param name="/detect_ball_forward/h_min_orange" value="$(arg h_min_forward_orange)" />
  <param name="/detect_ball_forward/h_max_orange" value="$(arg h_max_forward_orange)" />
  <param name="/detect_ball_forward/s_min_orange" value="$(arg s_min_forward_orange)" />
  <param name="/detect_ball_forward/s_max_orange" value="$(arg s_max_forward_orange)" />
  <param name="/detect_ball_forward/v_min_orange" value="$(arg v_min_forward_orange)" />
  <param name="/detect_ball_forward/v_max_orange" value="$(arg v_max_forward_orange)" />
  <param name="/detect_ball_forward/h_min_green" value="$(arg h_min_forward_green)" />
  <param name="/detect_ball_forward/h_max_green" value="$(arg h_max_forward_green)" />
  <param name="/detect_ball_forward/s_min_green" value="$(arg s_min_forward_green)" />
  <param name="/detect_ball_forward/s_max_green" value="$(arg s_max_forward_green)" />
  <param name="/detect_ball_forward/v_min_green" value="$(arg v_min_forward_green)" />
  <param name="/detect_ball_forward/v_max_green" value="$(arg v_max_forward_green)" />

  <node name="detect_ball_forward" pkg="coconuts_odroid" type="detect_ball_forward" output="screen"/>

  <!-- stereo image proc - forward camera-->
  <node ns="camera_forward" name= "image_proc" pkg="image_proc" type="image_proc"/>

  <!-- forward camera uses usb_cam -->
  <node name= "camera_forward" pkg="usb_cam" type="usb_cam_node" >
    <param name="video_device" type="string" value="/dev/video0"/>  <!-- video2 for odroid -->
    <param name="pixel_format" type="string" value="yuyv"/>
    <param name="framerate" type="int" value="10"/>
    <param name="camera_frame_id" type="string" value="camera_forward" /> 
    <param name="camera_info_url" type="string" value="file://$(find coconuts_odroid)/src/camera_forward_calibration.yaml"/>
  </node>

  <!-- locate ball publishes ball transform in 3d space -->
  <node name="locate_ball_forward" pkg="coconuts_odroid" type="locate_ball_forward" output="screen" />


  </launch>

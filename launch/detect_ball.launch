  <launch>

  <!-- Detect Ball -->
  <node name="detect_ball" pkg="coconuts_odroid" type="detect_ball">
    <param name="h_min" type="int" value="0" />
    <param name="h_max" type="int" value="66" />
    <param name="s_min" type="int" value="55" />
    <param name="s_max" type="int" value="255" />
    <param name="v_min" type="int" value="147" />
    <param name="v_max" type="int" value="255" />
</node>


<!-- Publish and Sync -->
<node name= "publishInfo" pkg="coconuts_odroid" type="publishInfo"/>

<!-- Disparity Map Analysis-->
<node name= "getDistance" pkg="coconuts_odroid" type="getDistance"/>

<!--stereoimageProc-->
<node ns="stereo" name= "stereo_image_proc" pkg="stereo_image_proc" type="stereo_image_proc">
    <param name="min_disparity" type="int" value="-42" />

</node>

<!-- usb_cam -->
<node name= "usb_cam" pkg="usb_cam" type="usb_cam_node" >
<param name="video_device" type="string" value="/dev/video0"/>
</node>

  <node ns="camera_2" pkg="uvc_camera" type="uvc_camera_node" name="uvc_camera_node_2" output="screen">
    <param name="width" type="int" value="640" />
    <param name="height" type="int" value="480" />
    <param name="fps" type="int" value="30" />
    <param name="frame" type="string" value="webcam" />
    <param name="device" type="string" value="/dev/video1" />
    <param name="auto_focus" type="bool" value="0" />
  </node>



  </launch>
